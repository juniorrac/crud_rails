<%= form_with model: student do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% student.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :genre %><br>
    <%= form.text_area :genre %><br>
    <% student.errors.full_messages_for(:genre).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
